{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "@/*": ["src/*"],
        }
    },
    "include": [
        "src/**/*"
    ]
   
}